<?php
include 'db_connect.php'; // Connect to the database

// Check if it's a POST request
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // Retrieve POST parameters
    $year = $_POST['year'];
    $make = $_POST['make'];
    $model = $_POST['model'];

    // Check if the username already exists
    $stmt = $conn->prepare("SELECT * FROM oil_config WHERE make = ?, year = ?, model = ?");
    $stmt->bind_param("sss", $make, $year, $model);
    $stmt->execute();
    $result = $stmt->get_result();

    if ($result->num_rows > 0) {
        // Username exists
        echo json_encode(['status' => 'success', 'message' => 'Mainteance found', 'maintenance_type' => $row[maintenance_type], 'maintenance_period' => $row[maintenance_period], 'miles_period' => $row[miles_period]]);
    } else {
        // Username is available
        echo json_encode(['status' => 'error', 'message' => 'Username is available']);
    }

    $stmt->close(); // Close the prepared statement
} else {
    echo json_encode(['status' => 'error', 'message' => 'Invalid request method']);
}

$stmt->close();
$conn->close(); // Close the database connection
?>