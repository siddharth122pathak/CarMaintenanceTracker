<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment"
        android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:text="Add a vehicle to begin!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/selected_car_title"
                    android:textAlignment="center" android:background="@drawable/title_border_gradient"
                    android:textSize="24sp"
                    android:textStyle="bold" android:padding="1dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="2dp">
                <TextView
                        android:text="0 miles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView_selected_car_mileage"
                        android:layout_weight="75" android:textAlignment="textEnd" android:textSize="24sp"
                        android:background="@drawable/green_border_gradient" android:paddingRight="10dp"
                />
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="5"/>
                <TextView
                        android:text="Update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/btn_selected_car_mileage_update"
                        android:layout_weight="20" android:background="@drawable/gray_button_border_gradient"
                        android:textAlignment="center" android:textSize="20sp"
                        android:padding="4dp"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Last updated: never"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_selected_car_mileage_last_update" android:layout_weight="70"
                        android:layout_width="0dp"
                        android:textAlignment="textEnd" android:textSize="8sp"/>
                <ImageView
                        android:src="@drawable/sharp_brightness_alert_24"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/imageView" android:layout_weight="5"
                        android:translationY="-5dp" android:scaleX="0.7" android:scaleY="0.7"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="25"/>
            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Notifications for this vehicle are OFF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_selected_car_notifications_setting" android:layout_weight="75"
                        android:textAlignment="textEnd" android:textSize="10sp"
                        android:background="@drawable/red_border_gradient"
                        android:paddingRight="10dp" android:paddingTop="2dp" android:paddingBottom="2dp"
                />
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="5"/>
                <TextView
                        android:text="Turn on"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/btn_selected_car_notifications_setting"
                        android:layout_weight="20" android:background="@drawable/gray_button_border_gradient"
                        android:textAlignment="center" android:textSize="14sp"
                        android:padding="2dp"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                    android:src="@android:drawable/ic_dialog_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/imageView2" android:layout_weight="100"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Coming up:"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView_coming_up"
                        android:layout_weight="50"
                        android:textAlignment="center" android:textSize="24sp"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="50"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Next Maintenance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView_next_maintenance_title"
                        android:layout_weight="50"
                        android:textAlignment="center" android:layout_gravity="center_vertical"
                        android:textSize="20sp" android:textStyle="bold"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="50">
                    <TextView
                            android:text="0 miles"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" android:id="@+id/textView_next_maintenance_miles"
                            android:layout_weight="40" android:textAlignment="center" android:textSize="14sp"/>
                    <TextView
                            android:text="- OR -"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" android:id="@+id/textView_next_maintenance_or"
                            android:layout_weight="20" android:textAlignment="center" android:textSize="8sp"/>
                    <TextView
                            android:text="Jan 01, 2020"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" android:id="@+id/textView_next_maintenance_date"
                            android:layout_weight="40" android:textAlignment="center" android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="5"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="5"/>
                <TextView
                        android:text="Add new maintenance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/btn_add_new_maintenance"
                        android:background="@drawable/gray_button_border_gradient"
                        android:textAlignment="center" android:textSize="20sp"
                        android:padding="6dp" android:layout_weight="90"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="5"/>
            </LinearLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="3"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="5"/>
                <TextView
                        android:text="View upcoming maintenance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/btn_view_upcoming_maintenance"
                        android:background="@drawable/gray_button_border_gradient"
                        android:textAlignment="center" android:textSize="20sp"
                        android:padding="6dp" android:layout_weight="90"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="5"/>
            </LinearLayout>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="3"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="50">
                <ImageView
                        android:src="@drawable/circle_button_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btn_vehicle_1" android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/circle_button_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btn_vehicle_2" android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/circle_button_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btn_vehicle_3" android:layout_weight="1"/>
            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:layout_weight="3"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>