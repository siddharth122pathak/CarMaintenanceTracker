<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:background="#FFFFFF">
            <TextView
                    android:text="@string/maintenance_by_miles_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/page_title"
                    android:textAlignment="center" android:background="@drawable/title_border_gradient"
                    android:textSize="24sp"
                    android:textStyle="bold" android:padding="1dp"/>
            <TextView
                    android:text="@string/homepage_selected_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/selected_car_title2"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" android:padding="1dp"
                    android:background="@drawable/light_green_title_color"/>
            <TextView
                    android:text="@string/upcoming_maintenance_miles_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/textView_upcoming_maintenance_main"
                    android:layout_weight="85" android:background="@drawable/full_border_white_background"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="15" android:background="#B6B6B6">
                <TextView
                        android:text="@string/maintenance_by_miles_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/textView_tab_maintenance_by_miles"
                        android:layout_weight="50"
                        android:textAlignment="center" android:paddingVertical="30dp"
                        android:background="@drawable/tab_background_selected" android:textSize="16sp"
                        android:textStyle="bold"/>
                <TextView
                        android:text="@string/maintenance_by_time_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/textView_tab_maintenance_by_time"
                        android:layout_weight="50"
                        android:paddingVertical="30dp" android:textAlignment="center"
                        android:background="@drawable/tab_background_unselected" android:textSize="16sp"
                        android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>