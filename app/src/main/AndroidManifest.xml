<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="CarMaintenanceTracker"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.CarMaintenanceTracker"
            tools:targetApi="31"
            tools:ignore="ObsoleteSdkInt">

        <!-- LoginActivity set as the launcher activity -->
        <activity android:name=".LoginActivity"
                  android:exported="true"
                  android:theme="@style/Theme.CarMaintenanceTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity declaration -->
        <activity android:name=".MainActivity"
                  android:exported="true"
                  android:theme="@style/Theme.CarMaintenanceTracker" />

        <!-- Other activities or services can be declared here -->

    </application>
</manifest>
